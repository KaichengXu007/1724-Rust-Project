{
  "info": {
    "name": "Rust LLM Inference Service",
    "description": "OpenAI-compatible API for local LLM inference with Rust",
    "version": "0.1.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "your-api-key-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Readiness Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/readiness",
              "host": ["{{baseUrl}}"],
              "path": ["readiness"]
            }
          }
        },
        {
          "name": "Prometheus Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Models",
      "item": [
        {
          "name": "List Models",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/models",
              "host": ["{{baseUrl}}"],
              "path": ["models"]
            }
          }
        },
        {
          "name": "Get Model Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/models/qwen",
              "host": ["{{baseUrl}}"],
              "path": ["models", "qwen"]
            }
          }
        }
      ]
    },
    {
      "name": "Completions",
      "item": [
        {
          "name": "Text Completion (Non-streaming)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"Qwen/Qwen2.5-0.5B-Instruct\",\n  \"prompt\": \"Once upon a time\",\n  \"max_tokens\": 100,\n  \"temperature\": 0.7,\n  \"top_p\": 0.95,\n  \"stream\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/completions",
              "host": ["{{baseUrl}}"],
              "path": ["completions"]
            }
          }
        },
        {
          "name": "Text Completion (Streaming)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"Qwen/Qwen2.5-0.5B-Instruct\",\n  \"prompt\": \"Explain Rust in simple terms:\",\n  \"max_tokens\": 150,\n  \"temperature\": 0.8,\n  \"stream\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/completions",
              "host": ["{{baseUrl}}"],
              "path": ["completions"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Chat Completion (CPU)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model-name\": \"Qwen/Qwen2.5-0.5B-Instruct\",\n  \"prompt\": \"What is Rust programming language?\",\n  \"max-token\": 256,\n  \"temperature\": 0.7,\n  \"device\": \"cpu\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/completions",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "completions"]
            }
          }
        },
        {
          "name": "Chat Completion (GPU)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model-name\": \"microsoft/Phi-3.5-mini-instruct\",\n  \"prompt\": \"Write a Rust function to calculate fibonacci\",\n  \"session-id\": \"{{$randomUUID}}\",\n  \"max-token\": 512,\n  \"temperature\": 0.7,\n  \"top-p\": 0.95,\n  \"device\": \"cuda\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/completions",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "completions"]
            }
          }
        },
        {
          "name": "Chat with Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model-name\": \"Qwen/Qwen2.5-0.5B-Instruct\",\n  \"prompt\": \"Continue the conversation\",\n  \"session-id\": \"persistent-session-123\",\n  \"max-token\": 256,\n  \"temperature\": 0.7,\n  \"device\": \"cuda\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/completions",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "completions"]
            }
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "List Sessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["sessions"]
            }
          }
        },
        {
          "name": "Get Session History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/chat/history/persistent-session-123",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "history", "persistent-session-123"]
            }
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/chat/history/persistent-session-123",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "history", "persistent-session-123"]
            }
          }
        },
        {
          "name": "Rollback History",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/history/persistent-session-123/rollback",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "history", "persistent-session-123", "rollback"]
            }
          }
        }
      ]
    },
    {
      "name": "Authenticated Requests",
      "item": [
        {
          "name": "Completion with API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"Qwen/Qwen2.5-0.5B-Instruct\",\n  \"prompt\": \"Protected request\",\n  \"max_tokens\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/completions",
              "host": ["{{baseUrl}}"],
              "path": ["completions"]
            }
          }
        }
      ]
    }
  ]
}
